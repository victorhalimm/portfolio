import { FiGithub } from "react-icons/fi";
import { CiLinkedin } from "react-icons/ci";
import { FaInstagram } from "react-icons/fa";
---

<Layout title="portfolio">
	<main class="w-full min-h-screen flex flex-col items-center justify-center">
		<div class="text-xl text-purple-600">victor halim</div>

		<div class="text-xl flex items-center pt-2">
			<span class="text-gray-700">&#10100;</span>
			<span class="text-gray-500 px-4"> developer & student </span>
			<span class="text-gray-700">&#10101;</span>
		</div>

		<div class="flex items-center text-gray-500 font-thin text-4xl w-1/4 justify-between pt-8">
			<MdOutlineEmail client:load />
			<FiGithub client:load />
			<CiLinkedin client:load />
			<FaInstagram client:load />
		</div>
	</main>

	<div class="min-h-screen"></div>
</Layout>

