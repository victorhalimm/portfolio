---
import Layout from "../layouts/Layout.astro";
import { MdOutlineEmail } from "react-icons/md";
import { FiGithub } from "react-icons/fi";
import { CiLinkedin } from "react-icons/ci";
import { FaInstagram } from "react-icons/fa";
import NavButton from "../components/Button/NavButton";
---

<Layout title="portfolio">
  <main class="relative w-full min-h-screen flex flex-col items-center justify-center">
    <div class="text-2xl text-purple-600 font-semibold">victor halim</div>

    <div class="text-xl flex items-center pt-4 pb-8">
      <span class="text-gray-700">&#10100;</span>
      <span class="text-gray-500 px-4"> developer & student </span>
      <span class="text-gray-700">&#10101;</span>
    </div>

    <div
      class="flex items-center text-gray-500 flex-wrap font-thin text-4xl justify-between w-1/3"
    >
      <NavButton
        icon={MdOutlineEmail}
        text="Email"
      />
      <NavButton
        icon={FiGithub}
        text="GitHub"
      />
      <NavButton
        icon={CiLinkedin}
        text="LinkedIn"
      />

      <NavButton
        icon={FaInstagram}
        text="Instagram"
      />
    </div>

	<p class="absolute bottom-8 text-base text-gray-500">
		Open for inquiries. 
		<span class="text-purple-600">
			Message me here!
		</span>
	</p>
  </main>

  <main class="min-h-screen">
	<div class="grid md:grid-cols-2 grid-cols-1 gap-4">
		
		<div class="bg-slate-600 h-[50vh]"></div>
		<div class="bg-slate-600 h-[50vh]"></div>
		<div class="bg-slate-600 h-[50vh]"></div>
		<div class="bg-slate-600 h-[50vh]"></div>
		<div class="bg-slate-600 h-[50vh]"></div>

	</div>
  </main>
</Layout>

